<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78E3FE"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:scaleType="fitXY"
    android:background="@drawable/frontscrrenshape"
    android:src="@drawable/frontscrren"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#05D1BE"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/pharmacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:padding="15dp"
                android:src="@drawable/pharmacylogo" />



        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:backgroundTint="#05D1BE"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="50dp">


            <ImageView
                android:id="@+id/government"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/governmentlogo" />


        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you have any Complain "
        android:fontFamily="serif"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contanct Us "
        android:fontFamily="serif"
        android:textColor="#FA0000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>


</LinearLayout>